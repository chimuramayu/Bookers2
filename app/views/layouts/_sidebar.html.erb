<div class="">
	<h2 class="headline">User info</h2>
  	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size: '100x100' %>
  	<table class="table table-sm row">
  	  <table-head class="col-xs-12">
  	    <tr>
  	      <th>name</th>
  	      <th><%= user.name %></th>
  	    </tr>
  	    <tr>
  	      <th>introduction</th>
  	      <th><%= user.introduction %></th>
  	    </tr>
  	  </table-head>
  	</table>
    <div class="row">
      <%= link_to edit_user_path(user), class:"btn btn-default col-xs-12" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
  </div>
</div>

<div class="">
  <h2 class="headline">New Book</h2>
    <%= form_for(book) do |f| %>
    <div class="field row">
      <%= f.label :title %><br />
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>
    <div class="field row">
      <%= f.label :opinion %><br />
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <div class="action row">
      <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
    </div>
   <% end %>
</div>
