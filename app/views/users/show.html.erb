<div class="container">
  <div class="row">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="col-xs-3">
      <%= render "layouts/sidebar", user: @user, book: @book %>
    </div>

  	<div class="col-xs-9">
  	  <h2 class="headline">Books</h2>
  	  <table class="table table-hover">
  	    <thead>
          <tr>
            <th></th>
            <th class="">title</th>
            <th class="">opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td class="">
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size: '40x40' %>
              <% end %>
            </td>
            <td class=""><%=link_to book.title,book_path(book) %></td>
            <td class=""><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
	    </table>
    </div>

  </div>
</div>