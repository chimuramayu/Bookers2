<div class="container">
  <div class="row">
  	<div class="col-xs-12">
  	  <h2 class="headline">User info</h2>

  	    <%= render "layouts/error_messages", model: @user %>

  	    <%= form_for(@user) do |f| %>
	        <div class="field">
	          <%= f.label :name %>
	          <%= f.text_field :name %>
	        </div>
	        <div class="field">
	          <label class="">image</label>
	          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
	        </div>
	        <div class="field">
	          <%= f.label :introduction %>
	          <%= f.text_area :introduction %>
	        </div>
	        <div class="action">
	          <%= f.submit "Update User" %>
	        </div>
         <% end %>

    </div>
  </div>
</div>