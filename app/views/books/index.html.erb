<div class="container">
  <div class="row">

    <div class="col-xs-12">
      <%= render "layouts/error_messages", model: @book %>
    </div>

    <div class="col-xs-3">
      <%= render "layouts/sidebar", user: current_user, book: @book %>
  	</div>

  	<div class="col-xs-9">
  	  <h2 class="headline">Books</h2>
  	  <table class="table table-hover">
  	    <thead>
          <tr>
            <th></th>
            <th class="">title</th>
            <th class="">opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td class="">
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size: '40x40' %>
              <% end %>
            </td>
            <td class=""><%=link_to book.title, book_path(book) %></td>
            <td class=""><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
	    </table>
    </div>

  </div>
</div>